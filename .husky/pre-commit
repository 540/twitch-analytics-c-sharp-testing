#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

## husky task runner examples -------------------
## Note : for local installation use 'dotnet' prefix. e.g. 'dotnet husky'

## run all tasks
#husky run

### run all tasks with group: 'group-name'
#husky run --group group-name

## run task with name: 'task-name'
#husky run --name task-name

## pass hook arguments to task
#husky run --args "$1" "$2"

## or put your custom commands -------------------
#echo 'Husky.Net is awesome!'

echo '\n\n Running Pre-commit Checks \n\n'

# Run dotnet format to check EditorConfig rules
echo 'ğŸ” Checking code format...'
dotnet format "${PWD}/TwitchAnalytics.sln" --verify-no-changes || {
    echo 'âŒ Code format check failed. Run dotnet format to fix formatting issues.'
    exit 1
}

# Run build with StyleCop analysis
echo 'ğŸ” Running StyleCop analysis...'
dotnet build "${PWD}/TwitchAnalytics.sln" --no-restore /warnaserror || {
    echo 'âŒ StyleCop analysis failed. Please fix the code style issues.'
    exit 1
}

# Run tests
echo "ğŸ§ª Running tests..."
dotnet test || {
  echo "âŒ Tests failed. Please fix failing tests before committing."
  exit 1
}

echo 'âœ… All checks passed!'
